<?xml version="1.0"?>
<config>
    <modules>
        <Elite_Vafnote>
            <version>v2.1-build1</version>
        </Elite_Vafnote>
    </modules>
    
    <global>
        <blocks>
            <adminhtml>
                <rewrite>
                    <manage>Elite_Vafnote_Adminhtml_Block_Manage</manage>
                    <edit>Elite_Vafnote_Adminhtml_Block_Edit</edit>
                </rewrite>
            </adminhtml> 
        </blocks>
     </global>
     
     <adminhtml>
        <menu>
            <vaf>
                <children>
                    <notes translate="title">
                        <title>Fit Notes</title>
                        <sort_order>25</sort_order>
                        <children>
                            <manage translate="title">
                                <title>Manage</title>
                                <action>adminhtml/vafnotemanage</action>
                            </manage>
                            <import translate="title">
                                <title>Import</title>
                                <action>adminhtml/vafnoteimport</action>
                            </import>
                            <export translate="title">
                                <title>Export</title>
                                <action>adminhtml/vafnoteexport</action>
                            </export>
                        </children>
                    </notes>
                </children>
            </vaf>
        </menu>
        
        <acl>
            <resources>
                <admin>
                    <children>
                        <vaf>
                            <children>
                                <notes translate="title">
                                    <title>Fit Notes</title>
                                    <sort_order>25</sort_order>
                                    <children>
                                        <manage translate="title">
                                            <title>Manage</title>
                                            <action>adminhtml/vafnotemanage</action>
                                        </manage>
                                        <import translate="title">
                                            <title>Import</title>
                                            <action>adminhtml/vafnoteimport</action>
                                        </import>
                                        <export translate="title">
                                            <title>Export</title>
                                            <action>adminhtml/vafnoteexport</action>
                                        </export>
                                    </children>
                                </notes>
                            </children>
                        </vaf>
                    </children>
               </admin>
           </resources>
        </acl>
    </adminhtml>
    
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <frontName><![CDATA[admin]]></frontName>
                    
                    <modules>
                      <Elite_Vafnote_Admin before="Mage_Adminhtml">Elite_Vafnote_Admin</Elite_Vafnote_Admin>
                    </modules>
                </args>
            </adminhtml>
        </routers>
     </admin>
</config>
